@model DAPM_C_.Models.DeXuat
@{
    ViewData["Title"] = "XemChiTietDX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h2 class="text-center">CHI TIẾT ĐỀ XUẤT</h2>

    <div class="mt-4 mb-4">
        <hr />
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                Tiêu đề
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tieude)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Thời gian đề xuất
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgayDeXuat)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Cửa hàng
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaCuaHangNavigation.TenCuahang)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Địa chỉ cửa hàng
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaCuaHangNavigation.DiaChi)
            </dd>
        </dl>
    </div>
    <h4 class="mb-3">DANH SÁCH CHI TIẾT ĐỀ XUẤT</h4>
    @if (ViewBag.errorMSG != null)
    {
        <div class="alert alert-danger">
            @ViewBag.errorMSG
        </div>
    }

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Sản phẩm</th>
                <th>Size</th>
                <th>Màu</th>
                <th>Loại sản phẩm</th>
                <th>Đối tượng</th>
                <th>Số lượng</th>
                <th>Trạng thái duyệt</th>               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDeXuats)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaSanPhamNavigation.TenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaSizeNavigation.TenSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaMauNavigation.TenMau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaLoaiSanPhamNavigation.TenLoaiSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaDoiTuongNavigation.TenDoiTuong)
                    </td>                  
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongDuyet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThaiDeXuat)
                    </td>                   
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <form method="post" asp-action="CapNhatTrangThaiDX">
            <input type="hidden" name="MaDeXuat" value="@Model.MaDeXuat" />
            @if (ViewBag.ttvc != null) {
                <input type="hidden" name="TrangThaiVanChuyen" value="Xác nhận VC" />
                <button type="submit" class="btn btn-primary">Xác nhận vận chuyển</button>

            }else{
                <input type="hidden" name="TrangThaiVanChuyen" value="Đã vận chuyển" />
                <button type="submit" class="btn btn-primary">Đã vận chuyển</button>
            }
        </form>
        <div>
            <a asp-action="Index">Quay lại</a>
        </div>
    </div>

</div>


