@model DAPM_C_.Models.DeXuat

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>TẠO ĐỀ XUẤT</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tieude" class="control-label">Tiêu đề</label>
                <input asp-for="Tieude" class="form-control" />
                <span asp-validation-for="Tieude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaCuaHang" class="control-label">Cửa hàng</label>
                <input asp-for="MaCuaHang" class="form-control" />
                <span asp-validation-for="MaCuaHang" class="text-danger"></span>
            </div>
            <input asp-for="TrangThai" type="hidden" value="ChoDuyet"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
