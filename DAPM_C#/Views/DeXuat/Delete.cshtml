@model DAPM_C_.Models.ChiTietDeXuat

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ChiTietDeXuat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Lý do đề xuất
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LyDoDeXuat)
        </dd>
        <dt class = "col-sm-2">
            Số lượng đề xuất
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuongDeXuat)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaDeXuat" />
        <input type="hidden" asp-for="MaChiTietSanPham" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.MaDeXuat">Quay lại</a> 
    </form>
</div>
