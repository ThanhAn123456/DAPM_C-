@model IPagedList<DAPM_C_.Models.DeXuat>
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DANH SÁCH ĐỀ XUẤT</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo đề xuất</a>
</p>

<div style="display: flex; justify-content: center; align-items: center; padding: 16px; background-color: #f8f9fa; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
    <form method="get" class="docs-search-form row gx-3 align-items-center" asp-action="Index" style="display: flex; flex-wrap: nowrap; align-items: center; margin: 0; width: 100%; max-width: 800px; gap: 10px;">

        <div class="col-auto" style="flex-grow: 1;">
            <input type="text" id="search-docs" name="searchdocs" value="@ViewData["CurrentSearchDocs"]" class="form-control search-docs" placeholder="Tìm kiếm..." style="width: 100%; padding: 8px 12px; border-radius: 4px; border: 1px solid #ced4da;">
        </div>
        <div class="col-auto" style="flex-grow: 0;">
            <select class="form-select" name="MaCuaHang" style="width: auto;">
                <option value="">Chọn cửa hàng</option>
                @foreach (var item in ViewBag.ListCuaHang as SelectList)
                {
                    @if (item.Value == ViewBag.CurrentCuaHang)
                    {
                        <option selected="" value="@item.Value">@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="col-auto" style="flex-grow: 0;">
            <select class="form-select" name="TrangThai" style="width: auto;">
                <option value="">Trạng thái</option>
                @foreach (var item in ViewBag.ListTrangThai as SelectList)
                {
                    @if (item.Value == ViewBag.CurrentTrangThai)
                    {
                        <option selected="" value="@item.Value">@item.Text</option>
                    }
                    else
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
        </div>
        <div class="col-auto" style="flex-grow: 0;">
            <button type="submit" class="btn app-btn-secondary" style="padding: 8px 10px; background-color: #007bff; color: white; border: none; border-radius: 4px;">Tìm kiếm</button>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã đề xuất
            </th>
            <th>
                Tiêu đề 
            </th>
            <th>
                Thời gian đề xuất
            </th>
            <th>
                Cửa hàng
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDeXuat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tieude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDeXuat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaCuaHangNavigation.TenCuahang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a asp-action="ChiTietDeXuat" asp-route-id="@item.MaDeXuat" class="btn btn-outline-info">Xem chi tiết</a>
                 <a asp-action="XoaDeXuat" asp-route-MaDeXuat="@item.MaDeXuat" class="btn btn-outline-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>


<nav class="app-pagination mt-5">
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-searchdocs="@ViewData["CurrentSearchDocs"]"
                   asp-route-MaCuaHang="@ViewData["CurrentCuaHang"]"
                   asp-route-TrangThai="@ViewData["CurrentTrangThai"]">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
        }

        @for (var i = 1; i <= Model.PageCount; i++)
        {
            if (i == Model.PageNumber)
            {
                <li class="page-item active">
                    <a class="page-link">@i</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i"
                       asp-route-searchdocs="@ViewData["CurrentSearchDocs"]"
                       asp-route-MaCuaHang="@ViewData["CurrentCuaHang"]"
                       asp-route-TrangThai="@ViewData["CurrentTrangThai"]">@i</a>
                </li>
            }
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-searchdocs="@ViewData["CurrentSearchDocs"]"
                   asp-route-MaCuaHang="@ViewData["CurrentCuaHang"]"
                   asp-route-TrangThai="@ViewData["CurrentTrangThai"]">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Next</a>
            </li>
        }
    </ul>
</nav><!--//app-pagination-->
