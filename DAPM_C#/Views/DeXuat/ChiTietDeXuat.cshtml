@model DAPM_C_.Models.DeXuat

@{
    ViewData["Title"] = "ChiTietDeXuat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">CHI TIẾT ĐỀ XUẤT</h2>

    <div class="mt-4 mb-4">
        <hr />
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                Tiêu đề
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tieude)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Thời gian đề xuất
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgayDeXuat)
            </dd>
        </dl>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Lý do đề xuất</th>
                <th>Số lượng đề xuất</th>
                <th>Số lượng được duyệt</th>
                <th>Trạng thái duyệt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDeXuats)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaSanPhamNavigation.TenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LyDoDeXuat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongDeXuat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongDuyet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThaiDeXuat)
                    </td>
                    <td>
                        <a asp-action="DetailsCTDX" asp-route-MaDeXuat="@item.MaDeXuat" asp-route-MaChiTietSanPham="@item.MaChiTietSanPham" class="btn btn-primary btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
