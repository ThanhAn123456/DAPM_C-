@model IEnumerable<DAPM_C_.Models.Sanpham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSanPham)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSanPham" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.MaSanPham" class="btn btn-outline-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.MaSanPham" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
