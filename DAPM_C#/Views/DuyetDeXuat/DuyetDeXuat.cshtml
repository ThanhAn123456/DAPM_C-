@model DAPM_C_.Models.ChiTietDeXuat
@{
    ViewData["Title"] = "DuyetDeXuat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>DUYỆT</h1>
<h4>CHI TIẾT ĐỀ XUẤT</h4>
<hr />
@if (ViewBag.MSG != null)
{
    <div class="alert alert-danger">
        @ViewBag.MSG
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="DuyetDeXuat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDeXuat" />
            <input type="hidden" asp-for="MaChiTietSanPham" />
            <div class="form-group">
                <label asp-for="LyDoDeXuat" class="control-label"></label>
                <input asp-for="LyDoDeXuat" class="form-control" readonly="readonly" />
                <span asp-validation-for="LyDoDeXuat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongDeXuat" class="control-label"></label>
                <input asp-for="SoLuongDeXuat" class="form-control" readonly="readonly" />
                <span asp-validation-for="SoLuongDeXuat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongDuyet" class="control-label"></label>
                <input asp-for="SoLuongDuyet" class="form-control" />
                <span asp-validation-for="SoLuongDuyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThaiDeXuat" class="control-label"></label>
                <select asp-for="TrangThaiDeXuat" class="form-control" asp-items="ViewBag.TrangThaiOptions"></select>
                <span asp-validation-for="TrangThaiDeXuat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="XemChiTietDX" asp-route-id="@Model.MaDeXuat">Quay lại</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


