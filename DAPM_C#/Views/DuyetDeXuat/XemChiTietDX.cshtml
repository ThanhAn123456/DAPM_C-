@model DAPM_C_.Models.DeXuat
@{
    ViewData["Title"] = "XemChiTietDX";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h2 class="text-center">CHI TIẾT ĐỀ XUẤT</h2>

    <div class="mt-4 mb-4">
        <hr />
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                Tiêu đề
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tieude)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Thời gian đề xuất
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NgayDeXuat)
            </dd>
        </dl>
    </div>
    <h4 class="mb-3">DANH SÁCH CHI TIẾT ĐỀ XUẤT</h4>
    @if (ViewBag.errorMSG != null)
    {
        <div class="alert alert-danger">
            @ViewBag.errorMSG
        </div>
    }

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng đề xuất</th>
                <th>Lý do đề xuất</th>
                <th>Số lượng được duyệt</th>
                <th>Trạng thái duyệt</th>
                <th>Hoạt động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDeXuats)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaChiTietSanPhamNavigation.MaSanPhamNavigation.TenSanPham)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongDeXuat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LyDoDeXuat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongDuyet)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThaiDeXuat)
                    </td>
                    <td>
                        <a asp-action="DuyetDeXuat" asp-route-id="@item.MaChiTietSanPham" asp-route-maDX="@item.MaDeXuat" class="btn btn-outline-primary btn-sm">Duyệt</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <form method="post" asp-action="CapNhatTrangThaiDX">
            <input type="hidden" name="MaDeXuat" value="@Model.MaDeXuat" />
            <button type="submit" class="btn btn-primary">OK</button>
        </form>
    </div>

</div>


